<%= @path %> {
  <%= @logrotate.rotate %>
  <%= "size #{@logrotate.size}" if @logrotate.size %>
  missingok
  notifempty
  <%= "copytruncate" if @logrotate.copytruncate %>
  rotate <%= @logrotate.keep %>
  compress
  delaycrompress
  compresscmd <%= @logrotate.compresscmd %>
  uncompresscmd <%= @logrotate.uncompresscmd %>
  compressext <%= @logrotate.compressext %>
  dateext
  <%= "create #{@logrotate.permissions}" if @logrotate.permissions %>
  <%= @logrotate.sharedscripts ? "sharedscripts" : "nosharedscripts" %>
  <% if @logrotate.prerotate -%>
  prerotate
    <%= @logrotate.prerotate %>
  endscript
  <%- end -%>
  <% if @logrotate.postrotate -%>
  postrotate
    <%= @logrotate.postrotate %>
  endscript
  <%- end -%>
}
